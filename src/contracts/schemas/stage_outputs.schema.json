{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stage Outputs Schema",
  "description": "Inter-stage data contract schemas",
  "definitions": {
    "ingest_output": {
      "type": "object",
      "properties": {
        "movie_srt_path": {"type": "string"},
        "narration_srt_path": {"type": "string"},
        "movie_video_path": {"type": "string"},
        "narration_audio_path": {"type": "string"},
        "validated": {"type": "boolean"}
      }
    },
    "index_output": {
      "type": "object",
      "properties": {
        "collection_name": {"type": "string"},
        "chunks_indexed": {"type": "integer"},
        "total_duration": {"type": "number"}
      }
    },
    "search_output": {
      "type": "object",
      "properties": {
        "matches": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "segment_id": {"type": "string"},
              "start_time": {"type": "number"},
              "end_time": {"type": "number"},
              "similarity_score": {"type": "number"},
              "narration_text": {"type": "string"}
            }
          }
        }
      }
    }
  }
}

